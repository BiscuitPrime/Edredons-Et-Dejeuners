{% extends 'base.html.twig' %}

{% block title %}Propriétaire{% endblock %}

{% block body %}
    <h1>Détails du Propriétaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ owner.id }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ owner.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ owner.familyName }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ owner.adress }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ owner.country }}</td>
            </tr>
        </tbody>
    </table>

    <div align='center'>
        <br>
        <a href="{{ path('owner_index') }}" class='btn btn-outline-dark'>Retour à la Liste</a>
        <br>
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('owner_edit', {'id': owner.id}) }}" class='btn btn-outline-success'>Modifier</a>
        <br>
        {% endif %}
        </div>
    {% if is_granted('ROLE_ADMIN') %}
    {{ include('owner/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
